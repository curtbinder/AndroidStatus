<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="ReefAngel" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Seekbar is not used inside the main app, only in the dialogs -->
        <item name="android:buttonStyleToggle">@style/ToggleReefAngel</item>
        <!--<item name="android:listChoiceBackgroundIndicator">@drawable/reefangel_list_selector_holo_light</item>-->
        <!--<item name="android:activatedBackgroundIndicator">@drawable/reefangel_activated_background_holo_light</item>-->

        <!-- The cursor in the edittext boxes, should be default to @null but
            for some reason it does not get set like that-->
        <item name="android:textCursorDrawable">@null</item>
        <item name="colorPrimary">@color/reefangelblue</item>
        <item name="colorPrimaryDark">@color/reefangelblue_dark</item>
        <item name="colorAccent">@color/reefangelblue</item>
        <item name="myFrameBackground">@color/background_material_light</item>
        <item name="myNavDrawerBackground">@color/background_material_light</item>
        <item name="myReefAngelLogo">@drawable/reefangel_drawerlogo</item>
        <item name="myDefaultTextColor">@android:color/black</item>
        <item name="myDefaultToolbarTextColor">@android:color/black</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="myArrowColor">@android:color/black</item>

        <item name="cbDrawerItemSelectedBackground">@drawable/activated_background</item>
        <item name="cbDrawerItemSelectedText">@drawable/activated_text</item>

        <item name="android:alertDialogTheme">@style/AlertDialogStyle</item>
        <item name="android:datePickerDialogTheme">@style/PickerDialogStyle</item>
        <item name="android:timePickerDialogTheme">@style/PickerDialogStyle</item>
    </style>

    <!-- Alert Dialog Styles-->
    <style name="AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/reefangelblue</item>

        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="AlertDialogStyle.Dark" parent="Theme.AppCompat.Dialog.Alert">
        <item name="colorAccent">@color/reefangelblue</item>

        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- Date & Time Picker Dialog Styles-->
    <style name="PickerDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/reefangelblue</item>
    </style>
    <style name="PickerDialogStyle.Dark" parent="Theme.AppCompat.Dialog.Alert">
        <item name="colorAccent">@color/reefangelblue</item>
    </style>
</resources>