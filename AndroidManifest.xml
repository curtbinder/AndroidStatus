<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="info.curtbinder.reefangel.phone"
    android:versionCode="6"
    android:versionName="@string/app_version" >

    <uses-sdk
        android:minSdkVersion="3"
        android:targetSdkVersion="8" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="RAApplication"
        android:icon="@drawable/ic_icon"
        android:label="@string/app_name" >
        <activity
            android:name=".StatusActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AboutActivity"
            android:label="@string/titleAbout"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        <activity
            android:name=".LicenseActivity"
            android:label="@string/titleLicense"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        <activity
            android:name=".PrefsActivity"
            android:label="@string/titlePrefs" >
        </activity>
        <activity
            android:name=".ParamsListActivity"
            android:label="@string/titleParams" >
        </activity>
        <activity
            android:name=".MemoryActivity"
            android:label="@string/titleMemory" >
        </activity>
        <activity
            android:name=".CommandsActivity"
            android:label="@string/titleCommands" >
        </activity>
        <activity
            android:name=".MemoryTabsActivity"
            android:label="@string/titleTabs"
            android:theme="@android:style/Theme.NoTitleBar" >
        </activity>
        <activity
            android:name=".HistoryPopupActivity"
            android:label="@string/titleHistory"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        <service android:name=".ControllerService" >
        </service>
    </application>

</manifest>