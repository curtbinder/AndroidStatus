<?xml version="1.0" encoding="utf-8"?>

<TableLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:stretchColumns="1"
	android:layout_gravity="center"
	android:padding="10dp">

	<TableRow>
		<TextView   
		    android:text="@string/last_updated"
		    style="@style/UpdateText" />
		<TextView
			android:id="@+id/updated"
			style="@style/UpdateText.Status" />
	</TableRow>
	<Button 
		android:id="@+id/refresh_button"
		android:text="@string/refresh_label" />
		
	<ScrollView
		android:layout_width="fill_parent"
		android:layout_height="fill_parent">
		<TableLayout
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_gravity="top">
			<TextView 
				android:text="@string/status_label"
				style="@style/ParamsText" />
			<TableRow
				style="@style/RARow">
				<TextView
					android:id="@+id/t1_label"
					android:textColor="@color/t1"
					style="@style/ParamsText.Labels"
					/>
				<TextView 
					android:id="@+id/temp1"
					android:textColor="@color/t1"
					style="@style/ParamsText.Values"
					/>
			</TableRow>
			<TableRow
				style="@style/RARow">
				<TextView 
					android:id="@+id/t2_label"
					android:textColor="@color/t2"
					style="@style/ParamsText.Labels"
					/>
				<TextView 
					android:id="@+id/temp2"
					android:textColor="@color/t2"
					style="@style/ParamsText.Values"
					/>
			</TableRow>
			<TableRow
				style="@style/RARow">
				<TextView
					android:id="@+id/t3_label"
					android:textColor="@color/t3"
					style="@style/ParamsText.Labels"
					/>
				<TextView 
					android:id="@+id/temp3"
					android:textColor="@color/t3"
					style="@style/ParamsText.Values"
					/>
			</TableRow>
			<TableRow
				style="@style/RARow">
				<TextView 
					android:textColor="@color/ph"
					android:text="@string/ph_label"
					style="@style/ParamsText.Labels" 
					/>
				<TextView 
					android:id="@+id/ph"
					android:textColor="@color/ph"
					style="@style/ParamsText.Values"
					/>
			</TableRow>
			<TableRow
				style="@style/RARow">
				<TextView
					android:id="@+id/dp_label"
					android:textColor="@color/dp" 
					style="@style/ParamsText.Labels"
					/>
				<TextView
					android:id="@+id/dp"
					android:textColor="@color/dp"
					style="@style/ParamsText.Values"
					/>
			</TableRow>
			<TableRow
				style="@style/RARow">
				<TextView
					android:id="@+id/ap_label"
					android:textColor="@color/ap"
					style="@style/ParamsText.Labels"
					/>
				<TextView
					android:id="@+id/ap"
					android:textColor="@color/ap"
					style="@style/ParamsText.Values"
					/>
			</TableRow>
			<TableRow
				style="@style/RARow">
				<TextView 
					android:id="@+id/salinity_label"
					android:text="@string/salinity_label"
					style="@style/ParamsText.Labels"
					/>
				<TextView
					android:id="@+id/salinity"
					style="@style/ParamsText.Values"
					/>
			</TableRow>
		</TableLayout>
	</ScrollView>   
</TableLayout>
