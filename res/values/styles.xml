<resources>
    <style name="UpdateText" parent="@android:style/TextAppearance">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="UpdateText.Status">
        <item name="android:textColor">@color/updated_text</item>
        <item name="android:padding">10dp</item>
    </style>
    <style name="ParamsText" parent="@android:style/TextAppearance">
        <item name="android:textSize">24sp</item>
    </style>
    <style name="ParamsText.Labels">
        <item name="android:gravity">right</item>
    </style>
    <style name="ParamsText.Labels.RightColumn">
        <item name="android:layout_marginLeft">30sp</item>
    </style>
    <style name="ParamsText.Values">
        <item name="android:layout_marginLeft">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="ParamsButton">
        <item name="android:layout_width">fill_parent</item>
    </style>
    <style name="ParamsButton.Toggle">
        <item name="android:layout_marginLeft">15sp</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="ParamsButton.Mask">
		<item name="android:padding">10dp</item>
    </style>
    <style name="RARow">
        <item name="android:gravity">center</item>
        <item name="android:padding">10sp</item>
    </style>
    
    <style name="LightTheme" parent="android:Theme.Light"></style>
    <style name="DarkTheme" parent="android:Theme.Black"></style>
    <style name="Dialog" parent="android:Theme.Dialog">
    </style>
    <style name="NoTitleBar" parent="android:Theme.Black.NoTitleBar"></style>
</resources>