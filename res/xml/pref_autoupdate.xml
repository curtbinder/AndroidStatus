<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <PreferenceCategory android:title="@string/prefAutoUpdateCategory" >
        <ListPreference
            android:defaultValue="@string/prefAutoUpdateIntervalDefault"
            android:entries="@array/updateInterval"
            android:entryValues="@array/updateIntervalValues"
            android:key="@string/prefAutoUpdateIntervalKey"
            android:title="@string/prefAutoUpdateIntervalTitle" />
        <ListPreference
            android:defaultValue="@string/prefAutoUpdateProfileDefault"
            android:entries="@array/updateProfile"
            android:entryValues="@array/updateProfileValues"
            android:key="@string/prefAutoUpdateProfileKey"
            android:title="@string/prefAutoUpdateProfileTitle" />
    </PreferenceCategory>

</PreferenceScreen>